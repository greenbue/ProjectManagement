<div class="row">
  <div class="col-md-6 col-md-offset-3 login-box">
    <h1>Log in</h1>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper: :horizontal_form, html: {class: "simple_form"}) do |f| %>
      <%= f.input :email %>
      <%= f.input :password %>
      <% if devise_mapping.rememberable? %>
        <div class="form-checkbox">
          <%= f.input_field :remember_me, as: :boolean, boolean_style: :inline %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-default forgot-password' %>
        <%= f.submit "Log in", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
